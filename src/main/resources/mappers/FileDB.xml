<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.omymbackend.dao.FileDBDao">

    <select id="findById" parameterType="String"
            resultType="com.example.omymbackend.model.FileDB">
        SELECT
             ID
            ,NAME
            ,TYPE
            ,DATA
            ,ITEM_IDX
        FROM
            FILES
        WHERE ID = #{id}
    </select>

    <select id="findByItemIdx" parameterType="long"
            resultType="com.example.omymbackend.model.FileDB">
        SELECT
              ID
             ,NAME
             ,TYPE
             ,DATA
             ,ITEM_IDX
        FROM
            FILES
        WHERE ITEM_IDX = #{itemIdx}
    </select>

    <select id="findAll"
            resultType="com.example.omymbackend.model.FileDB">
        SELECT
              ID
             ,NAME
             ,TYPE
             ,DATA
             ,ITEM_IDX
        FROM
            FILES
        ORDER BY ID
    </select>

    <insert id="save"
            parameterType="com.example.omymbackend.model.FileDB">
        INSERT INTO FILES(
             ID
            ,NAME
            ,TYPE
            ,DATA
            ,ITEM_IDX
        ) VALUES (
              SQ_FILES.NEXTVAL
             ,#{name}
             ,#{type}
             ,#{data}
             ,#{itemIdx}
         )
    </insert>
</mapper>








