<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.omymbackend.dao.UserDao">

<!--    // user 정보 불러오기-->
<!--    Optional<User> findUserIdx(Long userIdx);-->
    <select id="findByUserIdx" parameterType="Long"
            resultType="com.example.omymbackend.model.User">
        SELECT
             IDX
            ,ID
            ,EMAIL
            ,NAME
            ,PHONE
            ,ADDRESS
            ,ROLES
            ,POSTCODE
            ,DETAIL_ADDRESS
        FROM USERS
        WHERE DELETE_YN = 'N'
        AND IDX = #{idx}
    </select>


    <select id="findByIdx" parameterType="String"
            resultType="User">
        SELECT
            IDX
             ,ID
             ,EMAIL
             ,PASSWORD
             ,ROLES
        FROM
            TB_USER_JWT_YIH
        WHERE IDX=#{idx}
    </select>

    <select id="findByName" parameterType="String"
            resultType="User">
        SELECT
            IDX
             ,ID
             ,EMAIL
             ,PASSWORD
             ,ROLES
        FROM
            TB_USER_JWT_YIH
        WHERE ID=#{id}
    </select>
    <!--    int insertUser(User user);-->
    <insert id="insertUser" parameterType="User">
        INSERT INTO TB_USER_JWT_YIH
        (
            IDX
        , ID
        , EMAIL
        , PASSWORD
        , ROLES
        )
        VALUES
            (
                SQ_USER_YIH.NEXTVAL
            , #{id}
            , #{email}
            , #{password}
            , #{roles}
            )
    </insert>
</mapper>








